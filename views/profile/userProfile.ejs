<% include ../partials/header.ejs %>

<div class="container mx-5 mt-4">
    <div class="row">
            <div class="card col-4 align-self-start mw-20 px-0 mx-2">
              <img src="/images/blankProfile.png" class="card-img-top rounded" alt="...">
              <div class="card-body p-2">
                <p class="card-text text-center mb-0"><strong><%= currentUser.firstName %> <%= currentUser.lastName %></strong></p>
                <p class="card-text text-center mb-0 txt-size-sm font-weight-bold"><em>with</em></p>
                <p class="card-text text-center"><%= currentUser.company %></p>
              </div>
            </div>
            <div class="card col-9 mx-2">
                <div class="card-body">
                    <div class="row">
                        <div class="col-4">
                            <h5>My Apps</h5>
                        </div>
                    </div>
                    <div class="row justify-content-center mt-4">
                        <div class="col-3 text-center">
                            <div class="card rounded border">
                                <a class="p-y-6" href="#">+ Add App</a>
                            </div>
                        </div>
                        <div class="col-3 text-center">
                            <div class="card rounded border">
                                <h5 class="card-title my-2">App Name</h5>
                                <img src="/images/blankProfile.png" class="card-img">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    </div>
</div>

<% include ../partials/footer.ejs %>